

<%= form_for(@flight) do |f| %>
  <p>
    <%= f.label :Flight_Name %><br />
    <%= f.text_field :flight_name %>
  </p>
  <p>
    <%= f.label :Departure %><br />
    <%= f.datetime_select :departure %>
  </p>
  <p>
    <%= f.label :Arrival %><br />
    <%= f.datetime_select :arrival %>
  </p>
  <p>
    <%= f.label :Source %><br />
    <%= f.text_field :source %>
  </p>
  <p>
    <%= f.label :Destination %><br />
    <%= f.text_field :destination %>
  </p>
  <p>
    <%= f.label :baggage_allowance %><br />
    <%= f.text_field :baggage_allowance %>
  </p>
  <p>
    <%= f.label :capacity %><br />
    <%= f.text_field :capacity %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>


